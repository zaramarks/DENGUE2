<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context="com.example.hppavilion.dengue.NavigationActivity"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Container"

        android:paddingTop="55dp"
        android:background="#00ffffff">


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Containerr">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="383dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:titleTextColor="#f1f0f0"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentEnd="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Containerrr">



        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/searchView2"
            android:foregroundTint="#ffffff"
            android:layout_marginTop="100dp" />

    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        android:layout_gravity="left|top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="#262626"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/imageView7"
                android:src="@mipmap/logozinha" />

            <TextView
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="20sp"

                android:text="Zara Hiraoka Marks"
                android:id="@+id/NOME"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Remaill"
                android:textColor="#fff"
                android:textSize="10sp"
                android:id="@+id/EMAIL" />

        </LinearLayout>




        <ListView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lv"
            android:background="@color/colorPrimaryDark"
            android:choiceMode="singleChoice"

            android:entries="@array/nav"
            android:layout_gravity="left|bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout">

        </ListView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>