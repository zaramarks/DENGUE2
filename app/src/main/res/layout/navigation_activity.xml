<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context="com.example.hppavilion.dengue.NavigationActivity"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Container"

        android:paddingTop="55dp"
        android:background="#00ffffff">


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Containerr">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="383dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentEnd="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Containerrr">

       <!-- <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarr"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:background="#00000000"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" /> -->

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/searchView2"
            android:foregroundTint="#ffffff"
            android:layout_marginTop="100dp" />

    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        android:layout_gravity="left|top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/NOME"
                android:id="@+id/NOME"
                android:layout_marginTop="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Remaill"
                android:id="@+id/EMAIL" />
        </LinearLayout>

      <!-- <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@+id/linearLayout2"></ScrollView>
        -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fff"
            android:layout_below="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:id="@+id/linearLayout2"
            android:layout_alignParentStart="true"></LinearLayout>

        <ListView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/lv"
            android:background="#fff"
            android:choiceMode="singleChoice"
            android:textColor="#ac6565"
            android:textSize="100dp"
            android:divider="#000000"

            android:dividerHeight="0dp"
            android:entries="@array/nav"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        </ListView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>